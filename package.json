{
  "name": "discord-bot-naut-drop",
  "version": "1.0.0",
  "description": "A node.js discord bot with the functionality of the awesomenauts drafter website",
  "main": "index.ts",
  "scripts": {
    "start": "node ./out/index.js",
    "build": "tsc --build tsconfig.json",
    "build-for-debug": "tsc --build tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "docker build . --build-arg TOKEN -t jeffsallans/discord-bot-naut-drop",
    "docker:run": "docker run -p 443:443 jeffsallans/discord-bot-naut-drop",
    "docker:push": "docker push jeffsallans/discord-bot-naut-drop",
    "deploy": "echo \"Assuming TOKEN environment variable is set\" && npm run build && npm run docker:build && npm run docker:push"
  },
  "author": "Jeff Sallans",
  "license": "GNU",
  "dependencies": {
    "@types/lodash": "^4.14.167",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.20"
  }
}
